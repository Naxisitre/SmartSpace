<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="container_temp">
        <item name="android:background">@drawable/rectangle_temp</item>
    </style>

    <style name="container_light">
        <item name="android:background">@drawable/rectangle_light</item>
    </style>

    <style name="container_title">
        <item name="android:background">@drawable/rectangle_title</item>
    </style>

    <style name="temperature_text">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="button">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/chakrapetch_medium</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:background">@drawable/rectangle_prob</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="popup_style">
        <item name="android:background">@drawable/popup_style</item>
    </style>
    <style name="photo">
        <item name="android:background">@drawable/rectangle_photo</item>
    </style>
</resources>