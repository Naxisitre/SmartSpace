<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/light_container"
    style="@style/container_light"
    android:layout_width="380dp"
    android:layout_height="120dp"
    android:layout_marginTop="32dp"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        tools:text="Lumière éteinte"
        android:text="@string/light_state"
        android:fontFamily="@font/chakrapetch_medium"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/light_icon"
            android:layout_width="61dp"
            android:layout_height="90dp"
            android:src="@drawable/lamp_off"/>
    </LinearLayout>
</LinearLayout>